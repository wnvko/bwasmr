@layout Numeric_path_no_value
@page "/root/numeric-path-no-value/{pathNoValue2:double}/numeric-path-4/{path4:double?}"


<div class="row-layout numeric-path-4-container">
    <h5 class="h5">
        Numeric path 4
    </h5>
    <h5 class="h5">
        @Path4
    </h5>
</div>

@code {

    [CascadingParameter]
    private RouteData RouteData { get; set; }
    [Parameter]
    public double Path4 { get; set; }
    [Parameter]
    public double PathNoValue2 { get; set; }

    protected override void OnParametersSet()
    {
        RouteData.RouteValues.TryGetValue("Path4", out var path4);
        Path4 = path4 != null ? Convert.ToDouble(path4) : 500;
        RouteData.RouteValues.TryGetValue("PathNoValue2", out var pathNoValue2);
        PathNoValue2 = Convert.ToDouble(pathNoValue2);
    }
}
